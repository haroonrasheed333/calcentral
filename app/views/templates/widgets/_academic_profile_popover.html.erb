<div
  data-ng-controller="StatusController"
  class="cc-popover-container cc-popover-status cc-left"
  data-ng-show="studentInfo.regStatus.code!=null && api.user.profile.features.academic_status && api.user.profile.roles.student">
  <button class="cc-header-icon cc-header-icon-font cc-icon-status-person"
    data-ng-class="{'cc-icon-status-person-haslayover':(showStatusError),'cc-header-icon-selected':(api.popover.status('cc-popover-academic-status'))}"
    data-ng-click="api.util.preventBubble($event);api.popover.toggle('cc-popover-academic-status')" title="Show your academic profile">
    <i class="fa fa-user"></i>
    <span data-ng-show="showStatusError" class="fa-stack cc-icon-status-person-layover">
      <i class="cc-icon fa fa-circle"></i>
      <i class="cc-icon fa fa-exclamation-circle"></i>
    </span>

  </button>
  <div class="cc-popover cc-popover-arrow cc-popover-academic-status" data-ng-show="api.popover.status('cc-popover-academic-status')">
    <div class="cc-popover-title">
      <h4>Academic Profile</h4>
    </div>
    <ul class="cc-popover-items" data-ng-click="api.popover.clickThrough('Academic Profile')">
      <li class="cc-popover-item">
        <a class="cc-popover-item-details" href="/academics">
          <div class="cc-launcher-status-description">
            <i class="cc-left fa" data-ng-class="{true:'fa-exclamation-circle',false:'fa-check-circle cc-icon-green'}[studentInfo.regStatus.needsAction]"></i>
            <strong>Registration Status:</strong> <span data-ng-bind="studentInfo.regStatus.summary"><br />
            <span data-ng-bind-html="studentInfo.regStatus.explanation"></span>
          </div>
        </a>
      </li>
      <li class="cc-popover-item">
        <a class="cc-popover-item-details" href="/academics">
          <div class="cc-launcher-status-description">
            <i class="cc-left fa"
               data-ng-class="{'fa-exclamation-circle': studentInfo.regBlock.needsAction,
               'fa-exclamation-triangle cc-unavailable': !studentInfo.regBlock.available,
               'fa-check-circle cc-icon-green': !studentInfo.regBlock.needsAction && studentInfo.regBlock.available}"></i>
            <strong>Registration Blocks:</strong> <span data-ng-show="studentInfo.regBlock.available" data-ng-bind="studentInfo.regBlock.activeBlocks"></span>
            <span data-ng-hide="studentInfo.regBlock.available">Currently Unavailable</span>
          </div>
        </a>
      </li>
      <li class="cc-popover-item">
        <a class="cc-popover-item-details" href="/academics">
          <div class="cc-launcher-status-description">
            <i class="cc-left fa" data-ng-class="{true:'fa-exclamation-circle',false:'fa-check-circle cc-icon-green'}[studentInfo.californiaResidency.needsAction]"></i>
            <strong>California Residency:</strong> <span data-ng-bind="studentInfo.californiaResidency.summary"><br />
            <span data-ng-bind-html="studentInfo.californiaResidency.explanation"></span>
          </div>
        </a>
      </li>
    </div>
  </ul>
</div>
